<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main_fragments.ProfileFragment">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Цой Владислав Львович"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_historyVisit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_transperant"
        android:text="История Посещения"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="39dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_transperant"
        android:text="Поменять пароль"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_historyVisit"
        tools:layout_editor_absoluteX="39dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_changeLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_transperant"
        android:text="Поменять логин"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_changePassword"
        tools:layout_editor_absoluteX="39dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_transperant"
        android:text="Выйти"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_changeLogin"
        tools:layout_editor_absoluteX="39dp" />

    <TextView
        android:id="@+id/txt_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш последний визит\n08.08.2023 15:17:05"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logout" />

    <TextView
        android:id="@+id/txt_accountResp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Под вашим аккаунтом вы можете:\nСоздавать.\nИзменять\nПодписывать\nОтправлять транзакций"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_visit" />

</androidx.constraintlayout.widget.ConstraintLayout>